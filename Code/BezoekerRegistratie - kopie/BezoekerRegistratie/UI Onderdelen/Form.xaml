<UserControl x:Class="BezoekerRegistratie.UI_Onderdelen.Form"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BezoekerRegistratie.UI_Onderdelen"

             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Wheat">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="white">

            <Label Content="{Binding Titel}"
                   HorizontalAlignment="Center"
                   Margin="30"
                   FontSize="30"
                   FontWeight="Bold"/>
            <Grid x:Name="formGrid">
                

            </Grid>
            <local:CustomButton Text="{Binding Verzenden}"
                                  Margin="10"
                                  x:Name="verzend"/>


        </StackPanel>
    </Grid>
</UserControl>
