<Page x:Class="BeheerderApp.Paginas.StartSchermBeheerder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeheerderApp.Paginas"
      xmlns:UIC="clr-namespace:Components;assembly=Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartSchermBeheerder">

    <Grid Background="LightSteelBlue">
        
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="white"
                    Orientation="Horizontal">

            <UIC:Knop Width="200" Height="40"
                      Text="Lijst met aanwezigen"
                      Margin="10"
                      x:Name="lijstMetAanwKnop"/>

            <UIC:Knop Width="200" Height="40"
                      Text="Gegevens beheren"
                      Margin="10"
                      x:Name="gegevensBeherenKnop"/>

        </StackPanel>
    </Grid>
</Page>
