<UserControl x:Class="BezoekerApp.Paginas.AanmeldPagina"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BezoekerApp.Paginas"
             xmlns:UIC="clr-namespace:Components;assembly=Components"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Wheat">
       
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="white">
            <Label Content="Inloggen"
                   HorizontalAlignment="Center"
                   Margin="30"
                   FontSize="30"
                   FontWeight="Bold"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <Label Content="Voornaam" 
                       Grid.Column="0"
                       Grid.Row="0"/>
                <TextBox Width="100" Height="15" 
                           Background="CadetBlue" 
                           Grid.Column="1"
                           Grid.Row="0"
                           Margin="5"
                           x:Name="voornaam"/>

                <Label Content="Achternaam" 
                       Grid.Column="0"
                       Grid.Row="1"/>
                <TextBox Width="100" Height="15" 
                           Background="CadetBlue" 
                           Grid.Column="1"
                           Grid.Row="1"
                           Margin="5"
                           x:Name="achternaam"/>

                




                <TextBlock Grid.Row="2">Hier moeten nog velden bij komen ...</TextBlock>
            </Grid>
            <UIC:Knop Text="Log In"
                              Margin="10"
                              x:Name="logInBtn"/>

            <UIC:Knop Text="Log Uit"
                      x:Name="logUitBtn"/>


        </StackPanel>
    </Grid>
</UserControl>
