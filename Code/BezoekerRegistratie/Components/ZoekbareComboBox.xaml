<UserControl x:Class="Components.ZoekbareComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Components"
             mc:Ignorable="d" 
             d:DesignHeight="{Binding Height}" d:DesignWidth="{Binding Width}">

    <ComboBox  Height="{Binding Height}" Width="{Binding Width}"
                IsEditable="True"
                IsTextSearchEnabled="False"
                x:Name="comboBox"
                PreviewTextInput="cb_PreviewTextInput"
                TextBoxBase.TextChanged="comboBox_TextChanged"/>

</UserControl>
