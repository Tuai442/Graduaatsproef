<UserControl x:Class="Components.CheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Components"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="100">

    <!--Width="{Binding Width}" Height="{Binding Height}-->
    <!--Width="100" Height="40"-->
    <Border Width="{Binding X}" Height="{Binding Y}"
            BorderThickness="1"
            BorderBrush="Black"
            CornerRadius="10"
            Background="CadetBlue"
            x:Name="bgColor">

        <Button Background="Transparent"
                Content="{Binding TText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                BorderThickness="0"
                x:Name="button" Click="button_Click"
                Margin="10"
                
                />


    </Border>
</UserControl>
